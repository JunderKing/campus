<view class="container">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="group-title">
      请填选择周报日期
    </view>
    <view class="form-group column">
      <view class="form-item border big">
        <view class="item-title">
          周报日期
        </view>
        <view class="item-content">
          <picker class="big" mode="date" value="{{date}}" bindchange="onDateChange"> 
            {{date}}
          </picker>
        </view>
      </view>
    </view>
    <view class="group-title">
      周报内容
    </view>
    <view class="form-group">
      <view class="form-item">
        <textarea name="content" placeholder="请填写周报内容" auto-height value="{{content}}" maxlength="-1"/>
      </view>
    </view>
    <view class="btn-area">
      <button formType="submit" type="primary">提交</button>
    </view>
  </form>
</view>
