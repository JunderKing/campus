view.canvas-area{
  height: calc(100vh - 50px);
  display: inline-flex;
  width: 100%;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}
view.canvas-row{
  width: 100%;
  height: 25%;
  display: flex;
  flew-flow: row nowrap;
  justify-content: center;
  align-items: center;
  position: relative;
}
.canvas-item{
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #f0f0f0;
}
navigator.canvas-item{
  width: 50%;
  height: 100%;
  font-size: 20px;
  box-sizing: border-box;
}
.canvas-item.title{
  flex-shrink: 2;
  width: 20px;
  padding: 4px 0;
  border: none;
  font-size: 12px;
  text-align: center;
  line-height: 16px;
  word-wrap: break-word;
  color: #888;
  position: absolute;
  background-color: #fff;
}
