<view class="container">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="group-title">
      请填写实验信息
    </view>
    <view class="form-group">
      <view class="form-item border">
        <view class="item-title">实验标题</view>
        <view class="item-content">
          <input name="title" placeholder="请输入实验标题"/>
        </view>
      </view>
      <view class="form-item big">
        <view class="item-title">实验假设</view>
        <view class="item-content big">
          <textarea name="assumption" placeholder="请输入实验假设" auto-height/>
        </view>
      </view>
    </view>
    <view class="btn-area">
      <button formType="submit" type="primary">提交</button>
    </view>
  </form>
</view>
