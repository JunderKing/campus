<view class="container">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="area-title">
      加速营基本信息(必填)
    </view>
    <view class="form-area">
      <view class="form-item cube">
        <view class="item-title-float">
          主办方Logo
        </view>
        <image class="logo" mode="aspectFit" src="{{logo}}" bindtap="chooseLogo"></image>
      </view>
      <view class="form-item-box">
        <view class="form-item border">
          <view class="item-title">
            名称
          </view>
          <view class="item-content">
            <input type="text" name="name" placeholder="请输入加速营名称"/>
          </view>
        </view>
        <view class="form-item">
          <view class="item-title">
            主办方
          </view>
          <view class="item-content">
            <input type="text" name="sponsor" placeholder="请输入加速营主办方"/>
          </view>
        </view>
      </view>
    </view>
    <view class="area-title">
      加速营简介(必填)
    </view>
    <view class="form-area">
      <textarea name="intro" auto-height placeholder="请填写不少于15字的加速营简介" max-length="500"/>
    </view>
    <view class="btn-area">
      <button formType="submit" type="primary">提交</button>
    </view>
  </form>
</view>
