<view class="container">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="area-title">
      创投会基本信息(必填)
    </view>
    <view class="form-area border">
      <view class="form-item cube">
        <view class="item-title-float">
          主办方Logo
        </view>
        <image class="logo" mode="aspectFit" src="{{logo}}" bindtap="chooseLogo"></image>
      </view>
      <view class="form-item-box">
        <view class="form-item border">
          <view class="item-title">
            名称
          </view>
          <view class="item-content">
            <input type="text" name="name" placeholder="请输入创投会名称"/>
          </view>
        </view>
        <view class="form-item">
          <view class="item-title">
            主办方
          </view>
          <view class="item-content">
            <input type="text" name="sponsor" placeholder="请输入创投会主办方"/>
          </view>
        </view>
      </view>
    </view>
    <view class="form-area column follow">
      <view class="form-item border big">
        <view class="item-title">
          地址
        </view>
        <view class="item-content">
          <input name="addr" type="text" placeholder="请输入地址" bindinput="oninput"/>
          <!--<picker mode="date" value="{{date}}" bindchange="onDateChange"> -->
            <!--{{date}}-->
            <!--</picker>-->
        </view>
      </view>
      <view class="form-item border big">
        <view class="item-title">
          开始时间
        </view>
        <view class="item-content picker">
          <picker name="startDate" mode="date" value="{{startDate}}" data-key="startDate" bindchange="onPickerChange"> 
            {{startDate}}
          </picker>
          <picker name="startTime" mode="time" value="{{startTime}}" data-key="startTime" bindchange="onPickerChange"> 
            {{startTime}}
          </picker>
        </view>
      </view>
      <view class="form-item big">
        <view class="item-title">
          结束时间
        </view>
        <view class="item-content picker">
          <picker name="endDate" mode="date" value="{{endDate}}" data-key="endDate" bindchange="onPickerChange"> 
            {{endDate}}
          </picker>
          <picker name="endTime" mode="time" value="{{endTime}}" data-key="endTime" bindchange="onPickerChange"> 
            {{endTime}}
          </picker>
        </view>
      </view>
    </view>
    <view class="area-title">
      创投会简介(必填)
    </view>
    <view class="form-area">
      <textarea name="intro" auto-height placeholder="请填写不少于15字的创投会简介" max-length="500"/>
    </view>
    <view class="btn-area">
      <button formType="submit" type="primary">提交</button>
    </view>
  </form>
</view>
