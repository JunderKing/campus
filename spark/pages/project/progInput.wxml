<view class="container">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="form-item cmnt-box">
      <textarea class="" name="content" placeholder="请填写相关内容……" value="{{content}}"/>
    </view>
    <view class="btn-area">
      <button formType="submit" type="primary" size="default">提交</button>
      <button formType="reset" type="default" size="default">重置</button>
    </view>
  </form>
</view>
